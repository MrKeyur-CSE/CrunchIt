<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CartActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/firstCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/loginimg" />

            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/itemCost"
                android:background="@color/black"
                android:padding="6dp"
                android:text="Pani Puri"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/itemCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/itemImage"
                android:background="@color/black"
                android:padding="6dp"
                android:text="25"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/secondCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstCard"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/itemImage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/loginimg" />

            <TextView
                android:id="@+id/itemTitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/itemCost2"
                android:background="@color/black"
                android:padding="6dp"
                android:text="Hide n Seek"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/itemCost2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/itemImage2"
                android:background="@color/black"
                android:padding="6dp"
                android:text="25"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/TotalLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkOutButton"
        android:gravity="right"
        android:text="TOTAL         Rs. 50"
        android:textAlignment="gravity"
        android:textSize="24sp" />

    <Button
        android:id="@+id/checkOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/homeScreenNavbar"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:background="@drawable/bluetheme_roundshape"
        android:text="CHECKOUT" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/homeScreenNavbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:menu="@menu/menu" />
</RelativeLayout>