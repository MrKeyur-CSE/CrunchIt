<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".Activities.accountScreen">

    <TextView
        android:id="@+id/userNameAccountScreen"
        android:layout_width="151dp"
        android:layout_height="39dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="34dp"
        android:fontFamily="@font/poppins"
        android:text="User Name"
        android:textColor="@color/black"
        android:textSize="25sp" />


    <Button
        android:id="@+id/SettingsBtnAccountScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkOrderBtnAccountScreen"
        android:layout_margin="24dp"
        android:background="@drawable/greytheme_roundshape"
        android:fontFamily="@font/poppins"
        android:paddingStart="20dp"
        android:text="Settings"
        android:textAlignment="textStart"
        android:textSize="20dp" />

    <Button
        android:id="@+id/checkOrderBtnAccountScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userNameAccountScreen"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/greytheme_roundshape"
        android:fontFamily="@font/poppins"
        android:paddingStart="20dp"
        android:text="Orders"
        android:textAlignment="textStart"
        android:textSize="20dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/accountScreenNavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:menu="@menu/menu" />
</RelativeLayout>